schema: "1.0.0"
id: customer-support
description: Customer support agent with knowledge base
version: "1.0.0"

# LLM Configuration
llm:
  api_keys:
    openai: "${{ secrets.OPENAI_API_KEY }}"
  
  models:
    - text: "openai/gpt-4o"
      settings:
        temperature: 0.5
        max_tokens: 2000
    - embedding: "openai/text-embedding-3-large"

# Overlord Configuration
overlord:
  persona: |
    You are a helpful customer support representative.
    Be friendly, patient, and thorough in your responses.
  
  clarification:
    style: conversational
    max_rounds:
      direct: 3
      other: 2

# Memory for conversation context
memory:
  buffer:
    size: 20
    vector_search: true

# Agents auto-discovered from agents/ directory
agents: []
