schema: "1.0.0"
id: multi-agent-team
description: Team of specialized AI agents with automatic orchestration
version: "1.0.0"

# LLM Configuration
llm:
  api_keys:
    openai: "${{ secrets.OPENAI_API_KEY }}"
  
  models:
    - text: "openai/gpt-4o"
      settings:
        temperature: 0.7
        max_tokens: 4096
    - embedding: "openai/text-embedding-3-large"

# Overlord Orchestration
overlord:
  soul: |
    You are a professional team lead who coordinates between specialized agents.
    You're knowledgeable, thorough, and efficient in delegation and synthesis.
  
  workflow:
    auto_decomposition: true
    complexity_threshold: 7.0
    max_parallel_tasks: 5
    timeouts:
      task_timeout: 120
      workflow_timeout: 600

# Memory
memory:
  buffer:
    size: 50
    vector_search: true
  
  persistent:
    connection_string: "sqlite:///data/memory.db"

# MCP Configuration - servers auto-discovered from mcp/ directory
mcp:
  default_timeout_seconds: 60
  max_tool_iterations: 15

# Agents auto-discovered from agents/ directory
agents: []
