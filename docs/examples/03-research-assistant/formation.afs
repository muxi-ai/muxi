schema: "1.0.0"
id: research-assistant
description: AI research assistant with web search and file access
version: "1.0.0"

# LLM Configuration
llm:
  api_keys:
    openai: "${{ secrets.OPENAI_API_KEY }}"
  
  models:
    - text: "openai/gpt-4o"
      settings:
        temperature: 0.7
        max_tokens: 4096
    - embedding: "openai/text-embedding-3-large"

# Overlord Configuration
overlord:
  soul: |
    You are a professional research assistant who is knowledgeable, thorough,
    and analytical. Be precise in your communication.
  
  workflow:
    auto_decomposition: true
    complexity_threshold: 7.0

# Memory Configuration
memory:
  buffer:
    size: 50
    vector_search: true
  
  persistent:
    connection_string: "sqlite:///data/memory.db"

# MCP Configuration - servers auto-discovered from mcp/ directory
mcp:
  default_timeout_seconds: 60
  max_tool_iterations: 10

# Agents - auto-discovered from agents/ directory
agents: []
